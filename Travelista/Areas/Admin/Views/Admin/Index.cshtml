            <!-- partial -->
            <div class="main-panel">
                <div class="content-wrapper">
                        <i  id="bannerClose"></i>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="d-sm-flex justify-content-between align-items-center transaparent-tab-border {">
                                <ul class="nav nav-tabs tab-transparent" role="tablist">
                                    <li class="nav-item">
                                        <a class="nav-link" id="home-tab"  href="#overview" role="tab" aria-selected="true">Overview</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link active" id="business-tab" href="#booking" role="tab" aria-selected="false">Booking</a>
                                    </li>
                                    <li class="nav-item">
                                       <a class="nav-link" id="performance-tab"  href="#contact" role="tab" aria-selected="false">Contact</a>
                                    </li>
        
                                </ul>
                            </div>
                            <div class="tab-content tab-transparent-content">
                                <div class="tab-pane fade show active" id="business-1" role="tabpanel" aria-labelledby="business-tab">
                                    <div class="row" id="overview">
                                        <div class="col-xl-3 col-lg-6 col-sm-6 grid-margin stretch-card">
                                            <div class="card">
                                                <div class="card-body text-center">
                                                    <h5 class="mb-2 text-dark font-weight-normal">Number Of Booking</h5>
                                                    <h2 class="mb-4 text-dark font-weight-bold">@bookingNum</h2>
                                            <div class="dashboard-progress dashboard-progress-1 d-flex align-items-center justify-content-center item-parent"><i class="mdi mdi-check-circle icon-md absolute-center text-dark" style="top:180px"></i></div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-xl-3 col-lg-6 col-sm-6 grid-margin stretch-card">
                                            <div class="card">
                                                <div class="card-body text-center">
                                                    <h5 class="mb-2 text-dark font-weight-normal">Number Of Users</h5>
                                                    <h2 class="mb-4 text-dark font-weight-bold">@numOfUsers</h2>
                                                <div class="dashboard-progress dashboard-progress-2 d-flex align-items-center justify-content-center item-parent"><i class="mdi mdi mdi-account-circle icon-md absolute-center text-dark" style="top:180px"></i></div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-xl-3  col-lg-6 col-sm-6 grid-margin stretch-card">
                                            <div class="card">
                                                <div class="card-body text-center">
                                                    <h5 class="mb-2 text-dark font-weight-normal">Number Of Trips</h5>
                                                    <h2 class="mb-4 text-dark font-weight-bold">@numOfTrips</h2>
                                            <div class="dashboard-progress dashboard-progress-3 d-flex align-items-center justify-content-center item-parent"><i class="mdi mdi-airplane-takeoff icon-md absolute-center text-dark" style="top:180px"></i></div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-xl-3 col-lg-6 col-sm-6 grid-margin stretch-card">
                                            <div class="card">
                                                <div class="card-body text-center">
                                                    <h5 class="mb-2 text-dark font-weight-normal">Number Of Country</h5>
                                                    <h2 class="mb-4 text-dark font-weight-bold">@numOfCountry</h2>
                                            <div class="dashboard-progress dashboard-progress-4 d-flex align-items-center justify-content-center item-parent"><i class="mdi mdi-map-marker-radius icon-md absolute-center text-dark" style="top:180px"></i></div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                 </div>
                            <div class="row" id="booking">
                                <div class="col-12 grid-margin">
                                    <div class="card">
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="col-sm-12">
                                                    <div class="d-flex justify-content-between align-items-center mb-4">
                                                        <h4 class="card-title mb-0">Booking Activity</h4>
                                                    </div>
                                                </div>
                                                <div class="col-lg-9 col-sm-8 grid-margin grid-margin-lg-0 mx-auto">
                                                    <!-- Added mx-auto class -->
                                                    <table id="example" class="display" style="width:100%">
                                                        <thead>
                                                            <tr>
                                                                <th>User email</th>
                                                                <th>Trip</th>
                                                                <th>Cost</th>
                                                                <th>Book Date</th>
                                                                <th>Book Status</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            @foreach (var item in ViewBag.Booking)
                                                            {
                                                                <tr>
                                                                    <td>@item.ApplicationUser.Email</td>
                                                                    <td>@item.Trip.Name</td>
                                                                    <td>@item.Cost</td>
                                                                    <td>@item.BookDate</td>
                                                                    <td>@item.Status</td>
                                                                </tr>
                                                            }
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row" id="contact">
                                <div class="col-12 grid-margin">
                                    <div class="card">
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="col-sm-12">
                                                    <div class="d-flex justify-content-between align-items-center mb-4">
                                                        <h4 class="card-title mb-0">Contact Activity</h4>
                                                    </div>
                                                </div>
                                                <div class="col-lg-9 col-sm-8 grid-margin grid-margin-lg-0 mx-auto">
                                                    <!-- Added mx-auto class -->
                                                    <table id="example2" class="display" style="width:100%">
                                                        <thead>
                                                            <tr>
                                                                <th>Name</th>
                                                                <th>Email</th>
                                                                <th>Subject</th>
                                                                <th>Message</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            @foreach (var item in ViewBag.contact)
                                                            {
                                                                <tr>
                                                                    <td>@item.Name</td>
                                                                    <td>@item.Email</td>
                                                                    <td style="word-wrap: break-word; max-width: 300px;">@item.Subject</td>
                                                                    <td style="word-wrap: break-word; max-width: 300px;">@item.MessageContent"</td>
                                                                </tr>
                                                            }
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


