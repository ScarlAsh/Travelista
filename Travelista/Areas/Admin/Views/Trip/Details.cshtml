@model Travelista.Models.Trip

<div class="main-panel">
    <div class="content-wrapper" style="overflow-y: scroll;">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <h4 class="card-title">Trip Details</h4>
                            </div>
                            <div class="col-md-6 text-right">
                                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
                                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger" data-toggle="modal" data-target="#confirmDeleteModal">Delete</a>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>Name:</strong> @Model.Name</p>
                                <p><strong>Cost:</strong> @Model.Cost</p>
                                <p><strong>Duration:</strong> @Model.Duration</p>
                                <p><strong>Capacity:</strong> @Model.Capacity</p>
                                <p><strong>Type:</strong> @Model.TripType.Name</p>
                                <p><strong>Country:</strong> @Model.Country.Name</p>
                                <p><strong>Description:</strong> @Model.Description</p>
                                <p><strong>Program:</strong> @Model.Program</p>
                            </div>
                            <div id="imageData" style="display:none;">@Html.Raw(Json.Serialize(Model.Images.Select(i => i.ImageURL)))</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="confirmDeleteModal" tabindex="-1" role="dialog" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true" data-backdrop="false" style=" position:absolute;">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmDeleteModalLabel">Confirm Delete</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this trip?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <!-- Actual delete button -->
                <a asp-action="Delete" asp-route-id="@Model.Id" id="deleteTripBtn" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>



