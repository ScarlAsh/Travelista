@model Travelista.ViewModel.TripViewModel

<div class="row">
	@if (Model.trips.Any())
	{
		@foreach (var trip in Model.trips)
		{
			<div class="col-lg-3 ml-5 mr-5" onclick='location.href="@Url.Action("Details", "Trip" , new {id = trip.Id})";'>
				<div class="single-destinations">
					<div class="thumb">
						<!--Check exist Images in Trip-->
						@if (trip.Images.Count > 0)
						{
							<img src="~/images/@trip.Images[0].ImageURL" alt="TripImage">
						}
					</div>
					<div class="details">
						
						<!--Trip Name-->
						<h4>@trip?.Name</h4>
						<p>
							<!--Trip Country-->
							@trip?.Country?.Name
						</p>
						<ul class="package-list">
							<!--Trip Duration-->

							<li class="d-flex justify-content-between align-items-center">
								<span>Duration</span>
								<span>@trip?.Duration Days</span>
							</li>
							
							<!--Trip Date-->
							<li class="d-flex justify-content-between align-items-center">
								<span>Date</span>
								<span>@trip?.StartDate.ToString("MM / dd / yyyy")</span>
							</li>

							<!--Trip Capacity-->
							<li class="d-flex justify-content-between align-items-center">
								<span>Available Seats</span>
								<span>@trip?.Capacity</span>
							</li>

							<!--Trip Types-->
							<li class="d-flex justify-content-between align-items-center">
								<span>Type</span>
								<span>@trip?.TripType?.Name</span>
							</li>
							
							<!--Trip Price-->
							<li class="d-flex justify-content-between align-items-center">
								<span>Price Per Person</span>
								<a href="#" class="price-btn">$ @trip?.Cost</a>
							</li>

						</ul>
					</div>
				</div>

			</div>
		}
	}
	else
	{
		<div class="col-lg-12 text-center">
			<br>
			<h1 class="display-4">Not Exist Trips</h1>
		</div>
	}
</div>


