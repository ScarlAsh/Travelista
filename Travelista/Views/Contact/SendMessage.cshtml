@model Travelista.Models.Contact


<section class="banner-area relative">
	<div class=" overlay overlay-bg"></div>
	<div class="container">
		<div class="row d-flex align-items-center justify-content-center">
			<div class="about-content col-lg-12">
				<h1 class="text-white">
					Contact Us
				</h1>
				@* <p class="text-white link-nav">
					<a asp-controller="Home" asp-action="Index">Home </a>  <span class="lnr lnr-arrow-right"></span>
					<a asp-controller="Contact" asp-action="SendMessage"> Contact Us</a>
				</p> *@
			</div>
		</div>
	</div>
</section>



<!-- Start contact-page Area -->
<section class="contact-page-area section-gap">
	<div class="container">
		<div class="row">
			<div class="map-wrap" style="width:100%; height: 445px;" id="map">
				<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3455.925325796378!2d31.446369685126466!3d29.9815759819052!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14583d693020ff57%3A0xac184c2f0804566b!2sEl%20tagamoa%20heights%20club!5e0!3m2!1sar!2seg!4v1680131082497!5m2!1sar!2seg" width="1000" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
			</div>
			<div class="col-lg-4 d-flex flex-column address-wrap">
				<div class="single-contact-address d-flex flex-row">
					<div class="icon">
						<span class="lnr lnr-home"></span>
					</div>
					<div class="contact-details">
						<h5>Tagamoa Heights Club</h5>
						<p>
								NEW CAIRO, New Cairo 3, Cairo Governorate 4713541
						</p>
					</div>
				</div>
				<div class="single-contact-address d-flex flex-row">
					<div class="icon">
						<span class="lnr lnr-phone-handset"></span>
					</div>
					<div class="contact-details">
						<h5>02 27576464</h5>
						<p>Mon to Fri 9am to 6 pm</p>
					</div>
				</div>
				<div class="single-contact-address d-flex flex-row">
					<div class="icon">
						<span class="lnr lnr-envelope"></span>
					</div>
					<div class="contact-details">
						<h5>Travelistaco@outlook.com</h5>
						<p>Send us your query anytime!</p>
					</div>
				</div>
			</div>
			<div class="col-lg-8">
				<form asp-action="SendMessage" method="post">
					<div class="row">
						<div asp-validation-summary="ModelOnly" class="text-danger"></div>

						<div class="col-lg-6 form-group">
							<input asp-for="Name" name="Name" placeholder="Enter Your Name"
								   onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter Your Name'"
								   class="common-input mb-20 form-control" required="" type="text">
							<span asp-validation-for="Name" class="text-danger"></span>
						</div>
						<div class=" col-lg-6 form-group">
							<input asp-for="Email" name="email" placeholder="Enter email address"
								   onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter email address'"
								   class="common-input mb-20 form-control" required="" type="email">
							<span asp-validation-for="Email" class="text-danger"></span>
						</div>
						<div class="col-lg-6 form-group">
							<input asp-for="Subject" name="subject"
								   placeholder="Enter subject" onfocus="this.placeholder = ''"
								   onblur="this.placeholder = 'Enter subject'" class="common-input mb-20 form-control"
								   required="" type="text">

							<span asp-validation-for="Subject" class="text-danger"></span>
						</div>
						<div class="col-lg-6 form-group">
							<textarea asp-for="MessageContent"
								   class="common-textarea form-control" name="MessageContent" placeholder="Enter Messege"
									  onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter Messege'"
									  required=""></textarea>
							<span asp-validation-for="MessageContent" class="text-danger"></span>
						</div>
						<div class="col-lg-12 form-group">
							<div class="alert-msg" style="text-align: left;"></div>
							<input class="genric-btn primary" style="float: right;" type="submit" value="Send Message" />
						</div>
					</div>
				</form>
				<h3>@ViewBag.msg</h3>
			</div>
		</div>
	</div>
</section>




<!-- End contact-page Area -->
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
